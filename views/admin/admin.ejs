<% layout('/layouts/boilerplate') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<body style="background: #f8f9fa; font-family: 'Segoe UI', sans-serif;">
  <div class="container py-5">
    <div class="text-center mb-4">
      <h1 class="display-5 fw-bold text-primary"><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h1>
      <p class="lead text-muted">Welcome Admin! Manage bookings, media, and profiles with ease.</p>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm mb-4 border-0">
          <div class="card-body">
            <h5 class="card-title text-secondary mb-3"><i class="bi bi-person-check me-2"></i>You are logged in as an Admin</h5>
            <p class="mb-1">Use the dashboard to manage your platform:</p>
            <ul class="list-unstyled mb-0">
              <li>✔ Manage bookings and user queries</li>
              <li>✔ Upload media for gallery</li>
              <li>✔ Add or update team profiles</li>
              <li>✔ Share newsletters with your clients</li>
            </ul>
          </div>
        </div>

        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h4 class="card-title text-secondary mb-3"><i class="bi bi-gear-fill me-2"></i>Admin Actions</h4>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><i class="bi bi-calendar-check me-2 text-primary"></i><a href="/admin/bookings" class="text-decoration-none">View Bookings</a></li>
              <li class="list-group-item"><i class="bi bi-megaphone me-2 text-success"></i><a href="/admin/newsletters" class="text-decoration-none">Share Newsletters</a></li>
              <li class="list-group-item"><i class="bi bi-cloud-upload me-2 text-warning"></i><a href="/admin/gallery/upload" class="text-decoration-none">Upload Media</a></li>
              <li class="list-group-item"><i class="bi bi-people-fill me-2 text-info"></i><a href="/admin/managementprofiles" class="text-decoration-none">Management Profiles</a></li>
              <!-- Add more actions as needed -->
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</body>
