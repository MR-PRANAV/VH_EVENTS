<script>
function openMediaModal(url, type) {
  const modal = document.getElementById('fullscreen-modal');
  const content = document.getElementById('fullscreen-content');
  if(type === 'image') {
    content.innerHTML = `<img src="${url}" style="max-width:90vw; max-height:80vh; aspect-ratio:16/9;" alt="fullscreen image">`;
  } else {
    content.innerHTML = `<video src="${url}" style="max-width:60vw; max-height:90vh; aspect-ratio:9/16;" controls autoplay></video>`;
  }
  modal.classList.add('active');
  document.body.style.overflow = 'hidden';
}
document.getElementById('close-fullscreen').onclick = function(event) {
  document.getElementById('fullscreen-modal').classList.remove('active');
  document.getElementById('fullscreen-content').innerHTML = '';
  document.body.style.overflow = '';
};
document.getElementById('fullscreen-modal').onclick = function(event) {
  if(event.target.id === 'fullscreen-modal') {
    document.getElementById('fullscreen-modal').classList.remove('active');
    document.getElementById('fullscreen-content').innerHTML = '';
    document.body.style.overflow = '';
  }
};
</script>
